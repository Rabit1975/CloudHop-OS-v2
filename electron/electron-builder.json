{
  "appId": "com.cloudhop.app",
  "productName": "CloudHop OS",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "package.json"
  ],
  "mac": {
    "target": ["dmg"],
    "icon": "build/icons/icon.icns",
    "category": "public.app-category.social-networking"
  },
  "win": {
    "target": ["nsis"],
    "icon": "build/icons/icon.ico"
  },
  "linux": {
    "target": ["AppImage"],
    "icon": "build/icons/icon.png",
    "category": "Network"
  }
}
